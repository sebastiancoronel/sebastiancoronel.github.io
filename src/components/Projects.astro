---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Css from "./icons/css.astro";
import VueJS from "./icons/VueJS.astro";
import ReactJS from "./icons/ReactJS.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import Laravel from "./icons/Laravel.astro";
import Supabase from "./icons/Supabase.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#003159] text-white",
    icon: Css,
  },
  VueJS: {
    name: "VueJS",
    class: "bg-[#42b883] text-white",
    icon: VueJS,
  },
  ReactJS: {
    name: "ReactJS",
    class: "bg-[#61DBFB] text-black",
    icon: ReactJS,
  },
  AstroIcon: {
    name: "Astro",
    class: "bg-[#222] text-white",
    icon: AstroIcon,
  },
  Laravel: {
    name: "Laravel",
    class: "bg-[#F9322C] text-white",
    icon: Laravel,
  },
  Supabase: {
    name: "Supabase",
    class: "bg-[#222] text-[#3ecf8e]",
    icon: Supabase,
  },
};
const PROJECTS = [
  {
    title: "Tesla landing page",
    description:
      "Tesla landing page trying Astro in combination with Tailwind and css",
    link: "https://tesla-electric-cars.netlify.app/",
    github: "https://github.com/sebastiancoronel/tesla-landing",
    image: "/projects/tesla.png",
    tags: [TAGS.AstroIcon, TAGS.TAILWIND, TAGS.CSS],
  },
  {
    title: "Ecommerce site made with ReactJS and Tailwind CSS",
    description:
      "Ecommerce web site using reactJS, tailwind css, react router with a shopping cart feature",
    link: "https://ecommerce-react-tailwindcss.netlify.app/",
    github: "https://github.com/sebastiancoronel/ecommerce-react",
    image: "/projects/ecommerce.png",
    tags: [TAGS.ReactJS, TAGS.TAILWIND],
  },
  {
    title: "Government City Council official web site",
    description:
      "Web site of the government city council. A content managment system to upload and download files, news and posts management.",
    link: "https://hcdfernandez.com.ar/",
    image: "/projects/consejo.png",
    tags: [TAGS.Laravel, TAGS.VueJS],
  },
  {
    title: "X clone",
    description:
      "X clone using supabase as authentication server as firebase alternative with postgres database and Tailwind CSS",
    //link: "https://cryptocurreniesprices.netlify.app/",
    github: "https://github.com/sebastiancoronel/twitstream",
    image: "/projects/twitstream.png",
    tags: [TAGS.Supabase, TAGS.TAILWIND],
  },
  {
    title: "Crypto quoter app with VueJS",
    description: "A quoter of cryptocurrencies against USD, EUR or Pounds",
    link: "https://cryptocurreniesprices.netlify.app/",
    github: "https://github.com/sebastiancoronel/cryptoPrices",
    image: "/projects/crypto-app-vue.png",
    tags: [TAGS.VueJS, TAGS.CSS],
  },
  {
    title: "Crypto quoter app with ReactJS",
    description: "A quoter of cryptocurrencies against USD, EUR or Pounds",
    link: "https://cryptopricesreact.netlify.app",
    image: "/projects/crypto-app-react.png",
    github: "https://github.com/sebastiancoronel/crypto-react",
    tags: [TAGS.ReactJS, TAGS.TAILWIND],
  },
  {
    title: "Carpentry Las Vigas",
    description: "Carpentry web site using CSS, HTML from scratch",
    link: "https://carpentry-las-vigas.netlify.app/",
    image: "/projects/carpentry.png",
    github: "https://github.com/sebastiancoronel/CarpinteriaLasVigas",
    tags: [TAGS.CSS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Alt image"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
